<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>ie FAB, ToggleButton checked, TIL active
        <item name="colorControlHighlight">@color/secondaryLightColor</item>ie click ripple
        <item name="android:textAllCaps">false</item>
        
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>ie EditText input
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>ie ToggleButton not checked, back arrow, overflow menu
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/primaryTextSize</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
    </style>
    
    <style name="SelectableTextRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/marginNormal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>