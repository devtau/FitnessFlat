<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>ie FAB, ToggleButton checked, TIL active
        <item name="colorControlHighlight">@color/secondaryLightColor</item>
        <item name="android:typeface">sans</item>
        <item name="android:textAllCaps">false</item>
        
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>ie EditText input
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>ie ToggleButton not checked, back arrow, overflow menu
        <item name="android:textColorHint">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/primaryTextSize</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    
    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>
    
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/secondaryLightColor</item>
    </style>
    
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    
    <style name="SelectableItemBackgroundBorderless">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources>