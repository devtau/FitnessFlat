<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/marginHalf"
    android:paddingBottom="@dimen/marginHalf"
    android:paddingLeft="@dimen/marginNormal"
    android:paddingRight="@dimen/marginNormal"
    style="@style/SelectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/position"
        tools:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/marginHalf"/>

    <TextView
        android:id="@+id/exercise"
        tools:text="Жим штанги (центр)"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"/>
    
    <TextView
        android:id="@+id/weight"
        tools:text="80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"/>
    
    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"/>
    
    <TextView
        android:id="@+id/repeats"
        tools:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"/>
    
    <TextView
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"/>
    
    <TextView
        android:id="@+id/count"
        tools:text="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"/>
</LinearLayout>