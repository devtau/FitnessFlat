<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.activities.heroDetails.HeroDetailsActivity">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true">
		
		<include layout="@layout/toolbar"/>
		
		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			
			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/marginHalf"
					android:layout_marginRight="@dimen/marginNormal"
					android:orientation="horizontal">
					
					<Button
						android:text="@string/first_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						style="@style/Widget.AppCompat.Button.Borderless"/>
					
					<EditText
						android:id="@+id/firstNameInput"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:inputType="textPersonName|textMultiLine"
						android:maxLines="3"/>
				</TableRow>
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/marginHalf"
					android:layout_marginRight="@dimen/marginNormal"
					android:orientation="horizontal">
					
					<Button
						android:text="@string/second_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						style="@style/Widget.AppCompat.Button.Borderless"/>
					
					<EditText
						android:id="@+id/secondNameInput"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:inputType="textPersonName|textMultiLine"
						android:maxLines="3"/>
				</TableRow>
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/marginHalf"
					android:layout_marginRight="@dimen/marginNormal"
					android:orientation="horizontal">
					
					<Button
						android:id="@+id/phoneText"
						android:text="@string/phone"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						style="@style/Widget.AppCompat.Button.Borderless"/>
					
					<EditText
						android:id="@+id/phoneInput"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:inputType="phone|textMultiLine"
						android:maxLines="3"/>
				</TableRow>
				
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="@dimen/marginNormalPlus"
					android:paddingRight="@dimen/marginNormal"
					android:orientation="horizontal"
					android:gravity="center_vertical">
					
					<TextView
						android:text="@string/gender"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"/>
					
					<ToggleButton
						android:id="@+id/genderFemale"
						android:layout_width="80dp"
						android:layout_height="wrap_content"
						android:drawableTop="@drawable/ic_gender_female"
						android:textOff=""
						android:textOn=""
						android:textSize="0sp"/>
					
					<ToggleButton
						android:id="@+id/genderMale"
						android:layout_width="80dp"
						android:layout_height="wrap_content"
						android:drawableTop="@drawable/ic_gender_male"
						android:textOff=""
						android:textOn=""
						android:textSize="0sp"/>
				</LinearLayout>
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/marginHalf"
					android:layout_marginRight="@dimen/marginNormal"
					android:orientation="horizontal">
					
					<Button
						android:id="@+id/vkText"
						android:text="@string/vk_id_base"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						style="@style/Widget.AppCompat.Button.Borderless"/>
					
					<EditText
						android:id="@+id/vkIdInput"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:inputType="text|textMultiLine"
						android:maxLines="3"/>
				</TableRow>
				
				<TableRow
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/marginHalf"
					android:layout_marginRight="@dimen/marginNormal"
					android:orientation="horizontal">
					
					<Button
						android:id="@+id/emailText"
						android:text="@string/email"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						style="@style/Widget.AppCompat.Button.Borderless"/>
					
					<EditText
						android:id="@+id/emailInput"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:inputType="textEmailAddress|textMultiLine"
						android:maxLines="3"/>
				</TableRow>
				
				<TableRow
					android:id="@+id/birthdayInput"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="@dimen/marginHalf"
					android:paddingBottom="@dimen/marginHalf"
					android:paddingLeft="@dimen/marginNormalPlus"
					android:paddingRight="@dimen/marginNormalPlus"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					style="@style/SelectableItemBackground">
					
					<TextView
						android:text="@string/birthday"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
					
					<TextView
						android:id="@+id/birthdayText"
						tools:text="04.09.2017"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:gravity="end"/>
				</TableRow>
				
				<Switch
					android:id="@+id/isChampion"
					android:text="@string/is_champion"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="@dimen/marginHalf"
					android:paddingBottom="@dimen/marginHalf"
					android:paddingLeft="@dimen/marginNormalPlus"
					android:paddingRight="@dimen/marginNormalPlus"/>
				
				<Button
					android:id="@+id/useVkAvatar"
					android:text="@string/use_vk_avatar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingTop="@dimen/marginNormal"
					android:paddingBottom="@dimen/marginNormal"
					android:layout_marginLeft="@dimen/marginNormal"
					android:layout_marginRight="@dimen/marginNormal"/>
			</TableLayout>
		</ScrollView>
	</LinearLayout>
	
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|end"
		android:layout_margin="@dimen/marginNormal"
		android:visibility="invisible"
		app:srcCompat="@drawable/ic_delete"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>